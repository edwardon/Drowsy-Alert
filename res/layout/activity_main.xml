<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<LinearLayout
			android:background="@color/green"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="horizontal">

		<RelativeLayout android:layout_weight="0.5" android:layout_height="fill_parent" android:layout_width="fill_parent">
			<TextView
					android:layout_width="130dp"
					android:layout_height="80dp"
					android:textStyle="bold"
					android:layout_marginTop="35dp"
					android:layout_marginLeft="70dp"
					android:text="Sleepy"
					android:textSize="25sp"/>

			<TextView
					android:layout_width="130dp"
					android:textStyle="bold"
					android:layout_height="80dp"
					android:layout_marginTop="120dp"
					android:layout_marginLeft="70dp"
					android:text="Dosing off"
					android:textSize="25sp"/>

			<TextView
					android:layout_marginTop="205dp"
					android:layout_marginLeft="70dp"
					android:layout_width="130dp"
					android:layout_height="80dp"
					android:textStyle="bold"
					android:text="Coffee?"
					android:fontFamily="sans-serif"
					android:textSize="25sp"/>


			<TextView
					android:layout_marginTop="280dp"
					android:layout_marginLeft="70dp"
					android:textStyle="bold"
					android:text="Awake"
					android:textSize="25sp"
					android:fontFamily="sans-serif"
					android:layout_width="130dp"
					android:layout_height="80dp"
					/>

		</RelativeLayout>

		<RelativeLayout android:layout_weight="0.5" android:layout_height="fill_parent" android:layout_width="fill_parent">

			<TextView
                    android:id="@+id/textview_sleepy"
					android:layout_width="40dp"
					android:layout_height="80dp"
					android:layout_marginTop="20dp"
					android:layout_marginLeft="70dp"
					android:background="@color/grey"/>

			<TextView
                    android:id="@+id/textview_dosing"
					android:layout_width="40dp"
					android:layout_height="80dp"
					android:layout_marginTop="100dp"
					android:layout_marginLeft="70dp"
					android:background="@color/grey"/>


			<TextView
                    android:id="@+id/textview_coffee"
					android:layout_marginTop="180dp"
					android:layout_marginLeft="70dp"
					android:layout_width="40dp"
					android:layout_height="80dp"
					android:background="@color/grey"/>

			<TextView
                    android:id="@+id/textview_awake"
					android:layout_marginTop="260dp"
					android:layout_marginLeft="70dp"
					android:layout_width="40dp"
					android:layout_height="80dp"
					android:background="@color/wake"/>

		</RelativeLayout>
	</LinearLayout>
    <Spinner
	    android:id="@+id/muses_spinner"
        android:fontFamily="sans-serif"
        android:background="@color/purple"
	    android:layout_width="match_parent"
	    android:layout_height="70dp" />
</LinearLayout>